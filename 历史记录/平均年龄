import java.util.*;

public class Main{
	public static void main(String[] args)
	{
		Scanner sc = new Scanner(System.in);
		while(sc.hasNext())
		{
			int W = sc.nextInt();
			double Y = sc.nextDouble();
			float X = sc.nextFloat();
			int N = sc.nextInt();
			
			for(int i=0;i<N;i++)
			{
				Y = (Y+1)*(1-X)+21*X;
			}
			System.out.println((int) Math.ceil(Y));
		}

		sc.close();
	}
}